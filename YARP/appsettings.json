{
  "ReverseProxy": {
    "Routes": {
      "user-route": {
        "ClusterId": "cluster-user",
        "Match": {
          "Path": "/user-service/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/user-service"
          }
        ]
      },
      "hotel-route": {
        "ClusterId": "cluster-hotel",
        "Match": {
          "Path": "/hotel-service/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/hotel-service"
          }
        ]
      }
    },
    "Clusters": {
      "cluster-user": {
        "Destinations": {
          "dest1": {
            "Address": "http://localhost:5000"
          }
        }
      },
      "cluster-hotel": {
        "Destinations": {
          "dest1": {
            "Address": "http://localhost:3000"
          }
        }
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Debug"
    }
  }
}